<RelativeLayout android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            xmlns:android="http://schemas.android.com/apk/res/android">

    <ImageView android:layout_width="wrap_content" android:layout_height="wrap_content" android:id="@+id/imageTitre" android:layout_centerHorizontal="true" android:src="@drawable/titre_menu" android:layout_marginTop="5sp"></ImageView>
    <TextView android:id="@+id/texteIntro"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10sp" android:layout_below="@+id/imageTitre" android:text="Trouvez les points de collecte les plus proches de chez vous...">
    </TextView>
    <TextView android:id="@+id/texteRayon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Localisation à moins de :"
        android:layout_below="@+id/texteIntro" android:layout_marginTop="16sp" android:layout_marginBottom="12sp" android:layout_marginLeft="20sp" android:textStyle="bold">
    </TextView>

    <Button android:id="@+id/btn5km" android:layout_height="wrap_content" android:textStyle="bold" android:text="5 km" android:layout_width="wrap_content" android:textColor="#0f0" android:layout_below="@+id/texteRayon" android:width="30pt"></Button>
    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:id="@+id/texte5km" android:layout_alignBaseline="@+id/btn5km" android:text="Vous pouvez même y aller à pied." android:layout_toRightOf="@+id/btn5km" android:textSize="13sp"></TextView>
    <ImageView android:layout_width="fill_parent" android:layout_height="wrap_content" android:src="@drawable/line" android:layout_below="@+id/btn5km" android:id="@+id/lignesous5km"/>
    
    <Button android:id="@+id/btn10km" android:layout_height="wrap_content" android:textStyle="bold" android:text="10 km" android:layout_width="wrap_content" android:textColor="#7f0" android:layout_below="@+id/lignesous5km" android:width="30pt"></Button>
    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:id="@+id/texte10km" android:layout_alignBaseline="@+id/btn10km" android:text="Tout le monde ne peut pas habiter à côté..." android:layout_toRightOf="@+id/btn10km" android:textSize="13sp"></TextView>
    <ImageView android:layout_width="fill_parent" android:layout_height="wrap_content" android:src="@drawable/line" android:id="@+id/lignesous10km" android:layout_below="@+id/btn10km"/>
    
    <Button android:id="@+id/btn20km" android:layout_height="wrap_content" android:textStyle="bold" android:text="20 km" android:layout_width="wrap_content" android:textColor="#ff0" android:layout_below="@+id/lignesous10km" android:width="30pt"></Button>
    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:id="@+id/texte20km" android:layout_alignBaseline="@+id/btn20km" android:text="Rien de plus proche ?" android:layout_toRightOf="@+id/btn20km" android:textSize="13sp"></TextView>
    <ImageView android:layout_width="fill_parent" android:layout_height="wrap_content" android:src="@drawable/line" android:id="@+id/lignesous20km" android:layout_below="@+id/btn20km"/>
    
    <Button android:id="@+id/btn30km" android:layout_height="wrap_content" android:textStyle="bold" android:text="30 km" android:layout_width="wrap_content" android:textColor="#f70" android:layout_below="@+id/lignesous20km" android:width="30pt"></Button>
    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:id="@+id/texte30km" android:layout_alignBaseline="@+id/btn30km" android:text="Songez au bilan CO2 de votre voyage..." android:layout_toRightOf="@+id/btn30km" android:textSize="13sp"></TextView>
    <ImageView android:layout_width="fill_parent" android:layout_height="wrap_content" android:src="@drawable/line" android:id="@+id/lignesous30km" android:layout_below="@+id/btn30km"/>
    
    <Button android:id="@+id/btn45km" android:layout_height="wrap_content" android:textStyle="bold" android:text="45 km" android:layout_width="wrap_content" android:textColor="#f00" android:layout_below="@+id/lignesous30km" android:width="30pt"></Button>
    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:id="@+id/texte45km" android:layout_alignBaseline="@+id/btn45km" android:text="Que signifie pour vous le mot 'écologie' ?" android:layout_toRightOf="@+id/btn45km" android:textSize="13sp"></TextView>
    
    <Button android:layout_width="wrap_content"    android:layout_height="wrap_content" android:id="@+id/btnInfo" android:background="@drawable/info" android:layout_alignParentBottom="true" android:layout_alignParentRight="true"></Button>


</RelativeLayout>
